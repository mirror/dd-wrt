# iifname "eth0" tcp dport {80, 90, 23} snat to 192.168.3.2
[
    {
        "match": {
            "left": {
                "meta": { "key": "iifname" }
            },
	    "op": "==",
            "right": "eth0"
        }
    },
    {
        "match": {
            "left": {
                "payload": {
                    "field": "dport",
                    "protocol": "tcp"
                }
            },
	    "op": "==",
            "right": {
                "set": [
                    23,
                    80,
                    90
                ]
            }
        }
    },
    {
        "snat": {
            "addr": "192.168.3.2"
        }
    }
]

