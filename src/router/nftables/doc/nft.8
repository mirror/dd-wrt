table inet x {
    chain y {
        type filter hook prerouting priority mangle; policy accept;
        tcp dport 321 tproxy to :22 accept
        tcp dport 99 tproxy ip to 1\&.1\&.1\&.1:999 accept
        udp dport 155 tproxy ip6 to [dead::beef]:smux accept
    }
