+add_uint32_big(aes_uint128_t *r, uint32_t x)
+{
+    unsigned char *rp = (unsigned char *) r;
+    uint32_t       t;
+
+    t = LOAD32_LE(rp + 12);
+    t += x;
+    STORE32_LE(rp + 12, t);
+}
