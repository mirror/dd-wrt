+{
+    unsigned char *rp = (unsigned char *) r;
+    uint64_t       t;
+
+    t = LOAD64_LE(rp);
+    t >>= n;
+    STORE64_LE(rp, t);
+    t = LOAD64_LE(rp + 8);
+    t >>= n;
+    STORE64_LE(rp + 8, t);
+}
+
+void
+lshift64_littleendian(aes_uint128_t *r, const unsigned int n)
+{
+    unsigned char *rp = (unsigned char *) r;
+    uint64_t       t;
+
+    t = LOAD64_LE(rp);
+    t <<= n;
+    STORE64_LE(rp, t);
+    t = LOAD64_LE(rp + 8);
+    t <<= n;
+    STORE64_LE(rp + 8, t);
+}
+
+void
+toggle(aes_uint128_t *r)
+{
+    r->u64[0] ^= 0xffffffffffffffffULL;
+    r->u64[1] ^= 0xffffffffffffffffULL;
+}
+
+void
+xor_rcon(aes_uint128_t *r)
+{
+    unsigned char *rp = (unsigned char *) r;
+    uint32_t       t;
+
+    t = LOAD32_LE(rp + 12);
+    t ^= 0xffffffff;
+    STORE32_LE(rp + 12, t);
+}
+
