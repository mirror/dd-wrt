AT_SETUP([LuaModify])
AT_KEYWORDS([cond lua lua-modreq])
AT_SKIP_IF([test "$LUA_AVAILABLE" != 1])

AT_DATA([mod.lua],
[[function set_req_path(a)
   http.req.path = a
end
function set_req_url(a)
   http.req.path = a
end
function reset_req_headers()
   http.req.headers = {
       ['Host'] = 'example.org',
       ['X-Mark'] = 'one'
   }
end
function set_req_header(f,v)
   http.req.headers[f] = v
end
function set_req_query(a)
   http.req.query = a
end
function del_req_query_param(f)
   http.req.query[f] = nil
end
function set_req_query_param(f,v)
   http.req.query[f] = v
end
]])

# LuaModify in listener
PT_CHECK([Lua
	Load "mod.lua"
End
ListenHTTP
	LuaModify "set_req_path" "/echo/file"
	Service
		Backend
		End
	End
End
],
[GET /foobar
end

200
x-orig-uri: /echo/file
end
])

PT_CHECK([Lua
