AT_SETUP([Rewrite response headers])
AT_KEYWORDS([rewrite response resprw])
PT_CHECK([ListenHTTP
	Service
		Rewrite response
			Header "Content-Type: text/(.+)"
			SetHeader "X-Content-SubType: $1"
		Else
			Header "Content-Type: application/(.+)"
			SetHeader "X-App: $1"
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /echo/foo
Host: example.net
Content-type: text/plain
end

200
x-content-subtype: plain
end

GET /echo/foo
Host: example.net
Content-type: application/tar
end

200
x-app: tar
end
])

PT_CHECK([ListenHTTP
	Service
		Rewrite response
			SetHeader "[X-My-Host: %[host]]"
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /echo/foo
Host: example.net
end

200
x-my-host: example.net
end
])

PT_CHECK([ListenHTTP
	Service
		Host -re "[([^:]+)(:.*)?]"
		Rewrite response
			SetHeader "X-My-Host: $1"
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /echo/foo
Host: example.net
end

200
x-my-host: example.net
end
])
AT_CLEANUP
