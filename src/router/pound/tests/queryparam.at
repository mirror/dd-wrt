AT_SETUP([QueryParam])
AT_KEYWORDS([queryparam QueryParam])
PT_CHECK([ListenHTTP
	Service
		QueryParam "index" -exact "10"
		Backend
			Address
			Port
		End
	End
	Service
		QueryParam "index" -beg "page-"
		Backend
			Address
			Port
		End
	End
	Service
		QueryParam "index" "other-.+-.*"
		Backend
			Address
			Port
		End
	End		
End
],
[GET /echo/foo?index=10
Host: example.org
end

200
x-backend-number: 0
end

GET /echo/foo?index=page-10
Host: example.com
end

200
x-backend-number: 1
end

GET /echo/foo?index=other-10-y
Host: example.com
end

200
x-backend-number: 2
end
])
AT_CLEANUP
