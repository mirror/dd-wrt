AT_SETUP([Error backend])
AT_KEYWORDS([error])

PT_CHECK([ListenHTTP
	Service
		Error 404
	End
End
],
[GET /foo/bar
end

404
end
])

m4_pushdef([ERR404],
[<html>
<head><title>Custom Not Found Error</title></head>
<body>
<p>The requested resource is not found on that server.</p>
<p>This custom error page was supplied using the Err404 directive.</p>
</body>])

AT_DATA([404.html],[ERR404
])

PT_CHECK([ListenHTTP
	Err404 "404.html"
	Service
		Error 404
	End
End
],
[GET /foo/bar
end

404

ERR404
end
])

PT_CHECK([ListenHTTP
	Service
		Error 404 "404.html"
	End
End
],
[GET /foo/bar
end

404

ERR404
end
])

m4_popdef([ERR404])

AT_CLEANUP
