AT_SETUP([HTTPS Virtual Hosts])
AT_KEYWORDS([https virthost])

AT_CHECK(
[AT_DATA([openssl.cfg],
[[[req]
distinguished_name=req
[SAN]
subjectAltName=DNS:www.example.org,DNS:example.com,DNS:www.example.com
]])

openssl req -new -newkey rsa:2048 -days 365 -nodes -x509 \
	-subj "/CN=www.example.org" \
	-extensions SAN \
	-config openssl.cfg \
    -keyout key.pem -out crt.pem || exit 77

cat crt.pem key.pem > example.pem
],
[0],
[ignore],
[ignore])

PT_CHECK(
[Service
	Header ["Host:[[:space:]]*www\\.example\\.org"]
        Backend
		Address 192.168.0.10
		Port    80
        End
End

Service
        Header ["Host:[[:space:]]*www\\.example\\.com"]
        Backend
		Address 192.168.0.11
		Port    80
        End
End

ListenHTTPS
	Address 127.0.0.1
	Port 8080
	Cert "example.pem"
	ClientCert 1 1
End
],
[GET /echo/foo/bar
Host: www.example.com
end

200
x-orig-uri: /echo/foo/bar
x-backend-number: 1
end

GET /echo/foo/bar
Host: www.example.org
end

200
x-orig-uri: /echo/foo/bar
x-backend-number: 0
end
])
AT_CLEANUP

