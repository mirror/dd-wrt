AT_SETUP([Basic set directives])
AT_KEYWORDS([set rewrite])
PT_CHECK([ListenHTTP
	Service
		Rewrite
			SetURL "/echo/other"
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /one
end

200
x-orig-uri: /echo/other
end
])

PT_CHECK([ListenHTTP
	Service
		Rewrite
			SetPath "/echo/other"
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /one
end

200
x-orig-uri: /echo/other
end
])

PT_CHECK([ListenHTTP
	Service
		Rewrite
			SetQuery "foo=10&quux=b%20ar"
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /echo/one
end

200
x-orig-uri: /echo/one?foo=10&quux=b%20ar
end
])

PT_CHECK([ListenHTTP
	Service
		Rewrite
			SetQueryParam "foo" "10"
			SetQueryParam "quux" "b%20ar"
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /echo/one
end

200
x-orig-uri: /echo/one?foo=10&quux=b%20ar
end
])

PT_CHECK([ListenHTTP
	Service
		Rewrite
			SetHeader "X-Foo: bar baz"
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /echo/one
end

200
x-orig-header-x-foo: bar baz
end
])

PT_CHECK([ListenHTTP
	Service
		Rewrite
			DeleteHeader -beg "X-Accept"
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /echo/foo
X-Accept: *
X-Accept-Ex: foo
end

200
-x-orig-header-X-Accept:
-x-orig-header-X-Accept-Ex:
end
])

PT_CHECK([ListenHTTP
	Service
		Rewrite
			DeleteHeader -beg "X-Accept:"
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /echo/foo
X-Accept: *
X-Accept-Ex: foo
end

200
-x-orig-header-X-Accept:
x-orig-header-X-Accept-Ex: foo
end
])

PT_CHECK([ListenHTTP
	Service
		Rewrite
			DeleteHeader ["X-Accept:[[:space:]]*bar"]
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /echo/foo
X-Accept: *
X-Accept-Ex: foo
end

200
x-orig-header-X-Accept: *
x-orig-header-X-Accept-Ex: foo
end
])

PT_CHECK([ListenHTTP
	Service
		Rewrite
			DeleteHeader ["X-Accept:[[:space:]]*bar"]
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /echo/foo
X-Accept: bar
X-Accept-Ex: foo
end

200
-x-orig-header-X-Accept:
x-orig-header-X-Accept-Ex: foo
end
])

PT_CHECK([ListenHTTP
	Service
		Rewrite
			SetPath "/echo/other"
			SetQueryParam "foo" "bar"
			SetQueryParam "qux" "x%2Fuq"
			SetHeader "x-foo: bar baz"
			DeleteHeader -beg -icase "x-bar:"
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /one
X-Bar: qux
end

200
x-orig-uri: /echo/other?foo=bar&qux=x%2Fuq
x-orig-header-x-foo: bar baz
-x-orig-header-X-Bar:
end
])

PT_CHECK([ListenHTTP
	Service
		SetPath ["/echo/other"]
		SetQueryParam "foo" "bar"
		SetQueryParam "qux" "x%2Fuq"
		SetHeader "x-foo: bar baz"
		DeleteHeader -beg -icase "x-bar:"

		Backend
			Address
			Port
		End
	End
End
],
[GET /one
X-Bar: qux
end

200
x-orig-uri: /echo/other?foo=bar&qux=x%2Fuq
x-orig-header-x-foo: bar baz
-x-orig-header-X-Bar:
end
])

AT_CLEANUP
