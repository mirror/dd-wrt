AT_SETUP([CheckURL])
AT_KEYWORDS([checkurl])

PT_CONF([ListenHTTP
	CheckURL "/echo/[[0-9][^/]]*"
	Address 127.0.0.1
	Port 80
	Service
		Backend
			Address 127.0.0.1
			Port 8080
		End
	End
End
])

PT_CONF([ListenHTTP
	CheckURL "/echo/[[0-9][^/]]*"
	CheckURL "/echo/foo/*"
	Address 127.0.0.1
	Port 80
	Service
		Backend
			Address 127.0.0.1
			Port 8080
		End
	End
End
],
[1],
[],
[pound: pound.cfg:3.9-16: CheckURL multiple pattern
])

PT_CHECK([ListenHTTP
	CheckURL "/echo/[[0-9][^/]]*"
	Service
		Backend
			Address
			Port
		End
	End
End
],
[GET /echo/9ok
end

200
x-orig-uri: /echo/9ok
end

GET /echo/ok
end

501
end
])
AT_CLEANUP

