AT_SETUP([Detached conditions])
AT_KEYWORDS([cond detcond])
PT_CHECK([Condition "first" or
	Host "example.org"
	Host "example.net"
End

Condition "second"
	Path -contain "/static/"
End

ListenHTTP
	Service
		Eval "second"
		Eval "first"
		Backend
		End
	End
	Service
		Eval "first"
		Backend
		End
	End
	Service
		Eval "second"
		Backend
		End
	End
End
],
[GET /echo/static/file
Host: example.org
end

200
x-backend-number: 0
end

GET /echo/file
Host: example.org
end

200
x-backend-number: 1
end

GET /echo/static/file
Host: foo.bar
end

200
x-backend-number: 2
end
])
AT_CLEANUP
