AT_SETUP([Request accessors])
AT_KEYWORDS([rewrite reqacc accessor])

PT_CHECK([ListenHTTP
	Service
		Rewrite
			SetPath ["/echo%[url]"]
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /one
end

200
x-orig-uri: /echo/one
end])

PT_CHECK([ListenHTTP
	Service
		Rewrite
			SetPath ["/echo%[path]"]
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /one
end

200
x-orig-uri: /echo/one
end])

PT_CHECK([ListenHTTP
	Service
		Rewrite
			SetHeader ["X-Query: (%[query])"]
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /echo/foo?dir=%2Fvar%2Flib&foo=bar
end

200
x-orig-header-X-Query: (dir=%2Fvar%2Flib&foo=bar)
end
])

PT_CHECK([ListenHTTP
	Service
		Rewrite
			SetHeader ["X-Dir: (%[param dir])"]
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /echo/foo?dir=%2Fvar%2Flib
end

200
x-orig-header-X-Dir: (%2Fvar%2Flib)
end
])

PT_CHECK([ListenHTTP
	Service
		Rewrite
			SetHeader ["X-X-Foobar: (%[header x-foobar])"]
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /echo/foo
X-Foobar: quux
end

200
x-orig-header-X-X-Foobar: (quux)
end
])

AT_CLEANUP

