AT_SETUP([LuaModify (response)])
AT_KEYWORDS([cond lua lua-mod lua-modreq])
AT_SKIP_IF([test "$LUA_AVAILABLE" != 1])

AT_DATA([mod.lua],
[[function set_resp(code,reason)
   http.resp.code = code
   http.resp.reason = reason
end
function reset_resp_headers()
   http.resp.headers = {
       ['Host'] = 'example.org',
       ['X-Mark'] = 'one'
   }
end
function set_resp_header(f,v)
   http.resp.headers[f] = v
end   
]])

# LuaModify in listener
PT_CHECK([Lua
	Load "mod.lua"
End
ListenHTTP
	Rewrite response
		LuaModify "reset_resp_headers"
	End
	Service
		Backend
		End
	End
End
],
[GET /echo/file
end

200
host: example.org
x-mark: one
-content-length: 0
end
])

# LuaModify in service
PT_CHECK([Lua
	Load "mod.lua"
End
ListenHTTP
	Service
		Rewrite response
			LuaModify "reset_resp_headers"
		End
		Backend
		End
	End
End
],
[GET /echo/file
end

200
host: example.org
x-mark: one
-content-length: 0
end
])

AT_CLEANUP
