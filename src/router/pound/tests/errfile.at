AT_SETUP([Custom Error Response])
AT_KEYWORDS([errfile])
m4_pushdef([ERR501],
[<html>
<head><title>Custom Bad Method Error</title></head>
<body>
<p>This method is not allowed.</p>
<p>This is custom error page was supplied using the Err501 directive.</p>
</body>])

AT_DATA([501.html],[ERR501
])

PT_CHECK([ListenHTTP
	Err501 "501.html"
	Service
		Backend
			Address
			Port
		End
	End
End
],
[PUT /echo/file
end

501

ERR501
end
])

m4_popdef([ERR501])

AT_CLEANUP
