AT_SETUP([Detached condition isolation])
AT_KEYWORDS([cond detcond dti])
PT_CHECK([[
Condition "a"
	Path -re "([^./]+)$"
End
ListenHTTP
	Service
		Path -re "/static(/.*)"
		Eval "a"
		SetPath "$1"
		Backend
		End
	End
End
]],
[GET /static/echo/foo
end

200
x-orig-uri: /echo/foo
end
])
AT_CLEANUP
