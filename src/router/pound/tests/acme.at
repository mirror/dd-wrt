AT_SETUP([ACME])
AT_KEYWORDS([acme])
AT_CHECK([mkdir challenges
echo "test_acme_challenge" > challenges/ABC
])
PT_CHECK([ListenHTTP
	ACME "challenges"
	Service
		Backend
			Address
			Port
		End
	End
End
],
[GET /.well-known/acme-challenge/ABC
end

200

test_acme_challenge
end

GET /.well-known/acme-challenge/ABD
end

404
end

GET /echo/ABC
end

200
x-orig-uri: /echo/ABC
x-backend-ident: pound.cfi:4
end
])
