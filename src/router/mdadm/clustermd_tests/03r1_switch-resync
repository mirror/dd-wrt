#!/bin/bash

mdadm -CR $md0 -l1 -b clustered -n2 $dev0 $dev1
ssh $NODE2 mdadm -A $md0 $dev0 $dev1
check $NODE1 resync
check $NODE2 PENDING
stop_md $NODE1 $md0
check $NODE2 resync
check $NODE2 wait
mdadm -A $md0 $dev0 $dev1
check all raid1
check all bitmap
check all nosync
check all state UU
check all dmesg
stop_md all $md0

exit 0
