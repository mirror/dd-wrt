		<div id="content">
			<div id="header">
				<div id="logo"><h1><% show_control(); %></h1></div>
				<% do_menu("Wireless_Basic.asp","WL_WPATable.asp"); %>
			</div>
			<div id="main">
				<div id="contents">
					<form name="wpa" action="apply.cgi" method="post">
					<input type="hidden" name="submit_button" value="WL_WPATable" />
