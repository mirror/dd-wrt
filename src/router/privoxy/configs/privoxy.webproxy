<h2><% tran("privoxy.legend"); %></h2>
<fieldset>
<legend><% tran("privoxy.server"); %></legend>
<div class="setting">
           <div class="label"><% tran("privoxy.server"); %></div>
           <input class="spaceradio" type="radio" name="privoxy_enable" value="1" <% nvram_checked("privoxy_enable", "1"); %> onclick="show_layer_ext(this, 'privoxyconfig', true)" /><% tran("share.enable"); %>&nbsp;
           <input class="spaceradio" type="radio" name="privoxy_enable" value="0" <% nvram_checked("privoxy_enable", "0"); %> onclick="show_layer_ext(this, 'privoxyconfig', false)"/><% tran("share.disable"); %>
</div>
<div id="privoxyconfig">
  <div class="setting">
           <div class="label"><% tran("privoxy.transp"); %></div>
           <input class="spaceradio" type="radio" name="privoxy_transp_enable" value="1" <% nvram_checked("privoxy_transp_enable", "1"); %> onclick="show_layer_ext(this, 'privoxyex', true)" /><% tran("share.enable"); %>&nbsp;
           <input class="spaceradio" type="radio" name="privoxy_transp_enable" value="0" <% nvram_checked("privoxy_transp_enable", "0"); %> onclick="show_layer_ext(this, 'privoxyex', false)" /><% tran("share.disable"); %>
  </div>
  <div id="privoxyex">
	  <div class="setting">
           <div class="label"><% tran("privoxy.exclude"); %></div>
           <input size="15" maxlength="15" class="text" name="privoxy_transp_exclude" value="<% nvram_get("privoxy_transp_exclude"); %>" />
	  </div>
  </div>
  <div class="setting">
             <div class="label"><% tran("privoxy.custom"); %></div>
	     <input class="spaceradio" type="radio" name="privoxy_advanced" value="1" <% nvram_checked("privoxy_advanced", "1"); %> onclick="show_layer_ext(this, 'privoxyadvanced', true); show_layer_ext(this, 'privoxywhite', false);"/><% tran("share.enable"); %>&nbsp;
             <input class="spaceradio" type="radio" name="privoxy_advanced" value="0" <% nvram_checked("privoxy_advanced", "0"); %> onclick="show_layer_ext(this, 'privoxyadvanced', false); show_layer_ext(this, 'privoxywhite', true);"/><% tran("share.disable");%>
  </div>
  <div id="privoxywhite">
	  <div class="setting">
              <div class="label"><% tran("privoxy.whitel"); %></div>
              <textarea cols="80" rows="12" id="privoxy_whitel" name="privoxy_whitel"></textarea>
              <script type="text/javascript">
              //<![CDATA[
              var privoxy_whitel = fix_cr( '<% nvram_get("privoxy_whitel"); %>' );
              document.getElementById("privoxy_whitel").value = privoxy_whitel;
              //]]>
              </script>
	  </div>
  </div>
  <div id="privoxyadvanced">
	    <div class="setting">
              <div class="label"><% tran("privoxy.custom"); %></div>
              <textarea cols="80" rows="12" id="privoxy_conf" name="privoxy_conf"></textarea>
              <script type="text/javascript">
              //<![CDATA[
              var privoxy_conf = fix_cr( '<% nvram_get("privoxy_conf"); %>' );
              document.getElementById("privoxy_conf").value = privoxy_conf;
              //]]>
              </script>
	  </div>
  </div>
</div>
</fieldset><br />
