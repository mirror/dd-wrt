+	# Wait until it has started listening
+	for l in p.stderr:
+		if "Not backgrounding" in l:
+			break
+	# Check it's still running
+		assert p.poll() is None
+	# Ready
+	yield p
+	p.terminate()
+	print("Terminated dropbear. Flushing output:")
+	for l in p.stderr:
+		print(l.rstrip())
