	    $(MAKE) -j $(shell getconf _NPROCESSORS_ONLN) -C $(LINUXDIR) bzImage EXTRA_LDSFLAGS="-I$(LINUXDIR)" CROSS_COMPILE="ccache i486-linux-uclibc-" ; \
	fi
	
