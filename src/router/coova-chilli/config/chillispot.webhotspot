
<fieldset>
	<legend><% tran("hotspot.legend"); %></legend>
	<div class="setting">
		<div class="label"><% tran("hotspot.hotspot"); %></div>
		<input class="spaceradio" type="radio" value="1" name="chilli_enable" <% nvsm("chilli_enable","1", "checked"); %> onclick="show_layer_ext(this, 'idchilli', true)" /><% tran("share.enable"); %>&nbsp;
		<input class="spaceradio" type="radio" value="0" name="chilli_enable" <% nvsm("chilli_enable","0", "checked"); %> onclick="show_layer_ext(this, 'idchilli', false)" /><% tran("share.disable"); %>
	</div>
	<div id="idchilli">
		<div class="setting">
			<div class="label"><% tran("hotspot.dhcp"); %></div>
			<% show_ifselect("chilli_interface"); %>
		</div>
		<div class="setting">
			<div class="label"><% tran("hotspot.net"); %></div>
			<input class="text" maxLength="18" size="25" name="chilli_net" value="<% nvg("chilli_net"); %>" />
		</div>
		<div class="setting">
			<div class="label"><% tran("hotspot.pserver"); %></div>
			<input class="text" maxLength="100" size="25" name="chilli_radius" value="<% nvg("chilli_radius"); %>" />
		</div>
		<div class="setting">
			<div class="label"><% tran("hotspot.bserver"); %></div>
			<input class="text" maxLength="100" size="25" name="chilli_backup" value="<% nvg("chilli_backup"); %>" />
		</div>
		<div class="setting">
			<div class="label"><% tran("hotspot.dns"); %></div>
			<input class="text" maxLength="15" size="25" name="chilli_dns1" value="<% nvg("chilli_dns1"); %>" />
		</div>
		<div class="setting">
			<div class="label"><% tran("hotspot.url"); %></div>
			<input class="text" maxLength="100" size="25" name="chilli_url" value="<% nvg("chilli_url"); %>" />
		</div>
		<div class="setting">
			<div class="label"><% tran("share.share_key"); %></div>
			<input class="text" maxLength="100" size="25" name="chilli_pass" value="<% nvg("chilli_pass"); %>" />
		</div>
		<div class="setting">
			<div class="label"><% tran("hotspot.radnas"); %></div>
			<input class="text" maxLength="500" size="25" name="chilli_radiusnasid" value="<% nvg("chilli_radiusnasid"); %>" />
		</div>
		<div class="setting">
			<div class="label"><% tran("hotspot.uam"); %></div>
			<input class="text" maxLength="500" size="25" name="chilli_uamsecret" value="<% nvg("chilli_uamsecret"); %>" />
		</div>
		<div class="setting">
			<div class="label"><% tran("hotspot.uamdns"); %></div>
			<input class="text" maxLength="500" size="25" name="chilli_uamanydns" value="<% nvg("chilli_uamanydns"); %>" />
		</div>
		<div class="setting">
			<div class="label"><% tran("hotspot.allowuam"); %></div>
			<textarea maxLength="2000" cols="60" rows="6" name="chilli_uamallowed" id="chilli_uamallowed"><% nvg("chilli_uamallowed"); %></textarea>
		</div>
		<div class="setting">
			<div class="label"><% tran("hotspot.allowuad"); %></div>
			<textarea maxLength="2000" cols="60" rows="6" name="chilli_uamdomain" id="chilli_uamdomain"><% nvg("chilli_uamdomain"); %></textarea>
		</div>
		<div class="setting">
			<div class="label"><% tran("hotspot.macauth"); %></div>
			<input class="spaceradio" type="radio" value="1" name="chilli_macauth" <% nvsm("chilli_macauth","1", "checked"); %> onclick="show_layer_ext(this, 'idmacauth', true)" /><% tran("share.enable"); %>&nbsp;
			<input class="spaceradio" type="radio" value="0" name="chilli_macauth" <% nvsm("chilli_macauth","0", "checked"); %> onclick="show_layer_ext(this, 'idmacauth', false)" /><% tran("share.disable"); %>
		</div>
		<div id="idmacauth">
			<div class="setting">
				<div class="label"><% tran("hotspot.macpasswd"); %></div>
				<input class="text" maxLength="100" size="25" name="chilli_macpasswd" value="<% nvg("chilli_macpasswd"); %>" />
				<span class="default"><script type="text/javascript">
				//<![CDATA[
				document.write("(" + share.deflt + ": password)");
				//]]>
				</script></span>
			</div>
		</div>
		<div class="setting">
			<div class="label"><% tran("hotspot.sec8021Xauth"); %></div>
			<input class="spaceradio" type="radio" value="1" name="chilli_802.1Xauth" <% nvsm("chilli_802.1Xauth","1", "checked"); %> /><% tran("share.enable"); %>&nbsp;
			<input class="spaceradio" type="radio" value="0" name="chilli_802.1Xauth" <% nvsm("chilli_802.1Xauth","0", "checked"); %> /><% tran("share.disable"); %>
		</div>
		<div class="setting">
			<div class="label"><% tran("hotspot.option"); %></div>
			<textarea id="chilli_additional" name="chilli_additional" cols="60" rows="4"></textarea>
	        <script type="text/javascript">
	        //<![CDATA[
	        	var chilli_additional = fix_cr( '<% nvg("chilli_additional"); %>' );
	        	document.getElementById("chilli_additional").value = chilli_additional;
	        //]]>
	        </script>
	    </div>
<fieldset>
	<legend><% tran("hotspot.fon_chilli"); %></legend>
	<input type="hidden" name="fon_userlist" value="13" />
	<table class="table" summary="fon users table">
		<tr>
			<th colspan="2"><% tran("hotspot.fon_user"); %></th>
		</tr>
		<tr>
			<th><% tran("share.usrname"); %></th>
			<th><% tran("share.passwd"); %></th>
		</tr>
		<% show_userlist(); %>
	</table><br />
	<div class="center">
		<script type="text/javascript">
		//<![CDATA[
			document.write("<input class=\"button\" type=\"button\" value=\"" + sbutton.add + "\" onclick=\"user_add_submit(this.form);\" />");
			document.write("<input class=\"button\" type=\"button\" value=\"" + sbutton.remove + "\" onclick=\"user_remove_submit(this.form);\" />");
		//]]>
		</script>
	</div>
</fieldset>
	   </div>
</fieldset><br />
