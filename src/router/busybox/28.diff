+{
+	char buf[LINEBUF_SIZE];
+	uint8_t *data;
+	off_t offset;
+	int column;
+
+	column = (0xf & (uintptr_t)G.current_byte);
+	data = G.current_byte - column;
+	offset = G.offset + (data - G.baseaddr);
