+				1)	((ordered+=1)) ;;
+				*)	ordered=`expr $ordered + 1` ;;
+				esac
+				;;
+			esac
+			;;
+		"$R")	case $ksh_arith in
+			1)	((failed+=1)) ;;
+			*)	failed=`expr $failed + 1` ;;
+			esac
+			;;
+		*)	case $ksh_arith in
+			1)	((failed+=1)) ;;
+			*)	failed=`expr $failed + 1` ;;
+			esac
+			case $r in
+			"$R")	;;
+			*)	echo "echo \"$i\" | ( IFS=\"$ifs\" read x y; echo \"(\$x)(\$y)\" ) # expected \"$r\" got \"$g\"" ;;
+			esac
+			case $R in
+			'')	R=$g
+				;;
+			"$g")	;;
+			*)	case $ksh_arith in
+				1)	((ordered+=1)) ;;
+				*)	ordered=`expr $ordered + 1` ;;
+				esac
+				;;
+			esac
+			;;
+		esac
+	done
