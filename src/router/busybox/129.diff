+static void parse_resolvconf(void)
+{
+	FILE *resolv;
+
+	resolv = fopen("/etc/resolv.conf", "r");
+	if (resolv) {
+		char line[128], *p;
+
+		while (fgets(line, sizeof(line), resolv)) {
+			p = strtok(line, " \t\n");
+
+			if (!p || strcmp(p, "nameserver") != 0)
+				continue;
+
+			p = strtok(NULL, " \t\n");
+
+			if (!p)
+				continue;
+
+			add_ns(xstrdup(p));
+		}
+
+		fclose(resolv);
+	}
+}
